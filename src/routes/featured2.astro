---
// src/routes/featured2.astro
import BaseLayout from "@layouts/BaseLayout.astro";
import Landing from "@components/Landing.astro";
import { t } from "i18n:astro";
import { getImage } from "astro:assets";

// Optimize our landing image
import { getOptimizedImage } from "@utils/utils";
import landingImage from "@assets/images/landing.jpg";
const optimizedImage = await getOptimizedImage(landingImage);

// Import featured image
import featured2 from "@assets/images/massages/featured2.jpg";

// Optimize image
const optimizedFeatured2 = await getImage({ src: featured2, format: 'webp', width: 522 });
const optimizedFeatured2Mobile = await getImage({ src: featured2, format: 'webp', width: 600 });

// Page metadata
const title = t("featured2:landing.title");
const description = t("featured2:landing.description");
---

<BaseLayout
    title={title}
    description={description}
    preloadedImage={optimizedImage}
>
    <!-- ============================================ -->
    <!--                    LANDING                   -->
    <!-- ============================================ -->
    <Landing title={t("featured2:landing.title")} image={optimizedImage} />

    <!-- ============================================ -->
    <!--                 Content Page                 -->
    <!-- ============================================ -->
    <section id="content-page-1533">
        <div class="cs-container">
            <div class="cs-image-group">
                <!--Flower-->
                <img class="cs-flower" src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/flower-graphic.svg" alt="flower" loading="lazy" decoding="async" height="148" width="153" />
                <picture class="cs-background">
                    <!--Mobile Image-->
                    <source media="(max-width: 600px)" srcset={optimizedFeatured2Mobile.src} type="image/webp" />
                    <!--Tablet and above Image-->
                    <source media="(min-width: 601px)" srcset={optimizedFeatured2.src} type="image/webp" />
                    <img loading="lazy" decoding="async" src={featured2.src} alt={t("featured2:content.imageAlt")} width="522" height="540" />
                </picture>
                <!--Floating Blob-->
                <img class="cs-floater" src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/day-care-events-left.svg" alt="graphic" loading="lazy" decoding="async" height="710" width="690" />
            </div>
            <div class="cs-content">
                <h1 class="cs-title">{t("featured2:content.h1")} <span class="cs-color">{t("featured2:content.h1Highlight")}</span></h1>
                
                <h3>{t("featured2:content.h3_1")}</h3>
                <p>{t("featured2:content.paragraph1")}</p>
                <p>{t("featured2:content.paragraph2")}</p>
                <p>{t("featured2:content.paragraph3")}</p>
                <p>{t("featured2:content.paragraph4")}</p>
                
                <h3>{t("featured2:content.h3_2")}</h3>
                <ol>
                    <li>{t("featured2:content.orderedList1")}</li>
                    <li>{t("featured2:content.orderedList2")}</li>
                    <li>{t("featured2:content.orderedList3")}</li>
                </ol>
                
                <h4>{t("featured2:content.h4")}</h4>
                <ul>
                    <li>{t("featured2:content.unorderedList1")}</li>
                    <li>{t("featured2:content.unorderedList2")}</li>
                    <li>{t("featured2:content.unorderedList3")}</li>
                </ul>
            </div>
        </div>
        <div class="cs-bubbles" aria-hidden="true"></div>
    </section>
</BaseLayout>

<style lang="less">

    /*-- -------------------------- -->
<---        Content Page        -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    @keyframes floatAnimation {
        0% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-2rem);
        }
        100% {
            transform: translateY(0);
        }
    }

    @keyframes floatAnimation2 {
        0% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-3rem);
        }
        100% {
            transform: translateY(0);
        }
    }

    #content-page-1533 {
        padding: var(--sectionPadding);
        background-color: #fff;
        /* clips the wave background from causing overflow issues when it goes off screen */
        overflow: hidden;
        position: relative;
        z-index: 1;
        
        .cs-container {
            width: 100%;
            max-width: (1280/16rem);
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            /* 40px - 64px */
            gap: clamp(2.5rem, 4vw, 4rem);
            position: relative;
        }

        .cs-content {
            /* set text align to left if content needs to be left aligned */
            text-align: left;
            width: 100%;
            max-width: (738/16rem);
            display: flex;
            flex-direction: column;
            /* centers content horizontally, set to flex-start to left align */
            align-items: flex-start;
        }
    
        .cs-title {
            font-size: var(--headerFontSize);
            font-weight: 900;
            line-height: 1.2em;
            text-align: inherit;
            width: 100%;
            max-width: 100%;
            margin: 0 0 (16/16rem) 0;
            color: var(--headerColor);
            position: relative;
        }

        h2, h3, h4, h5, h6 {
            font-weight: 700;
            text-align: inherit;
            margin: 0 0 (16/16rem) 0;
            color: var(--headerColor);
        }

        h2 {
            font-size: (32/16rem);
            margin-top: (32/16rem);
        }

        h3 {
            font-size: (24/16rem);
            color: var(--primary);
        }

        h4, h5, h6 {
            font-size: (20/16rem);
        }

        .cs-button-solid {
            margin-bottom: (32/16rem);
        }

        .cs-no-margin {
            margin: 0;
        }

        .cs-color {
            color: var(--primary);
        }
    
        p {
            font-size: var(--bodyFontSize);
            line-height: 1.5em;
            text-align: inherit;
            width: 100%;
            margin: 0 0 (16/16rem) 0;
            color: var(--bodyTextColor);
            &:last-of-type {
                margin-bottom: (32/16rem);
            }

            a {
                font-size: inherit;
                line-height: inherit;
                text-decoration: underline;
                color: var(--primary);
                filter: brightness(120%);
            }
        }

        ol, ul {
            padding-left: (24/16rem);
            margin: 0 0 (32/16rem) 0;
            color: var(--bodyTextColor);
            display: flex;
            flex-direction: column;
            gap: (16/16rem);
        }

        ul {
            li {
                list-style: none;
                color: inherit;
                position: relative;

                &:before {
                    /* custom list bullet */
                    content: '';
                    width: 3px;
                    height: 3px;
                    background: currentColor;
                    opacity: 1;
                    border-radius: 50%;
                    position: absolute;
                    display: block;
                    top: (10/16rem);
                    left: (-12/16rem);
                }
            }
        }

        img {
            width: 100%;
            height: auto;
            display: block;
        }

        .cs-image-group {
            width: (522/16em);
            height: (540/16em);
            display: none;
            position: relative;
            z-index: 1;
        }

        .cs-background {
            width: 100%;
            height: 100%;
            border-radius: (40/16em);
            /* clips the corners of the children around the border radius */
            overflow: hidden;
            /* makes it cover the parent dimensions */
            object-fit: cover;
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 1;

            img {
                width: 100%;
                height: 100%;
                /* makes it cover the parent like a backgorund image */
                object-fit: cover;
                display: block;
            }
        }

        .cs-flower {
            width: (153/16em);
            height: auto;
            position: absolute;
            right: (-32/16em);
            top: (-36/16em);
            z-index: 10;
        }

        .cs-floater {
            width: (710/16em);
            height: auto;
            position: absolute;
            left: (150/16em);
            top: (400/16em);
            z-index: -1;
            animation-name: floatAnimation2;
            animation-duration: 14s;
            animation-timing-function: ease-in-out;
            animation-fill-mode: forwards;
            animation-iteration-count: infinite;
        }
    }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
    #content-page-1533 {
        .cs-container {
            flex-direction: row;
            align-items: flex-start;
            justify-content: space-between;
        }

        .cs-content {
            width: 60%;
            max-width: (694/16rem);
            /* prevents flexbox from squishing it */
            flex: none;
        }

        .cs-image-group {
            font-size:~"min(1.3vw, 1em)";
            display: block;
            /* sends it to the right in the 2nd position */
            order: 2;
        }
    }
}

/* Desktop - 1200px */
@media only screen and (min-width: 75rem) {
    #content-page-1533 {

        .cs-content {
            width: 53%;
        }
    }
}

/* Dark Mode */
@media only screen and (min-width: 0rem) {
    body.dark-mode {
        #content-page-1533 {
            background-color: var(--dark);
            
            .cs-title, .cs-text, h2, h3, h4, h5, h6, li, p {
                color: var(--bodyTextColorWhite);
            }
            .cs-color, a {
                color: var(--primaryLight);
            }

            p, li {
                color: #ebebeb;
            }

            .cs-floater {
                opacity: .1;
            }
        }
    }
}
                                
</style>