// Create 120-minute services array
const services120 = [
  {
    name: t("services:list.duration120.service1.name"),
    description: t("services:list.duration120.service1.description"),
    price: t("services:list.duration120.service1.price")
  },
  {
    name: t("services:list.duration120.service2.name"),
    description: t("services:list.duration120.service2.description"),
    price: t("services:list.duration120.service2.price")
  },
  {
    name: t("services:list.duration120.service3.name"),
    description: t("services:list.duration120.service3.description"),
