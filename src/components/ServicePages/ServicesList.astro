        </div>
        <picture class="cs-picture">
            <!--Mobile Image-->
            <source media="(max-width: 600px)" srcset={optimizedMassage1Mobile.src} type="image/webp" />
            <!--Tablet and above Image-->
            <source media="(min-width: 601px)" srcset={optimizedMassage1.src} type="image/webp" />
            <img loading="lazy" decoding="async" src={massage1.src} alt={t("services:list.imageAlt")} width="521" height="640" />
