---

<!-- ============================================ -->
<!--                  Content                     -->
<!-- ============================================ -->

<section id="content-1450">
    <div class="cs-container">
        <div class="cs-content">
            <span class="cs-topper">{t("services:tiles.topper")}</span>
            <h2 class="cs-title">{t("services:tiles.title")}</h2>
            <p class="cs-text">
                {t("services:tiles.text")}
            </p>
        </div>
    </div>
</section>

<!-- ============================================ -->
<!--                  Pricing                     -->
<!-- ============================================ -->

<section id="pricing-995">
    <div class="cs-container">
        <div class="cs-content">
            <span class="cs-topper">{t("services:list.topper")}</span>
            <h2 class="cs-title">{t("services:list.title30")}</h2>
            <!--Menu-->
            <ul class="cs-menu-group">
                {services30.map((service) => (
                    <li class="cs-menu-item">
                        <h3 class="cs-h3">
                            <span class="cs-header">{service.name}</span>
                            <span class="cs-price">{service.price}</span>
                        </h3>
                        <p class="cs-menu-text">
                            {service.description}
                        </p>
                    </li>
                ))}
