---
// src/components/Services/ServiceFullWidth.astro
import { t } from "i18n:astro";
import { getImage } from "astro:assets";

// Import service images
import massage1 from "@assets/images/massages/massage1.jpg";
import massage2 from "@assets/images/massages/massage2.jpg";
import massage3 from "@assets/images/massages/massage3.jpg";
import massage4 from "@assets/images/massages/massage4.jpg";

// Optimize images
const optimizedMassage1 = await getImage({ src: massage1, format: 'webp', width: 413 });
const optimizedMassage2 = await getImage({ src: massage2, format: 'webp', width: 413 });
const optimizedMassage3 = await getImage({ src: massage3, format: 'webp', width: 413 });
const optimizedMassage4 = await getImage({ src: massage4, format: 'webp', width: 413 });

// Create services array for easy mapping
const services = [
  {
    number: "01",
    name: t("home:services.service1.name"),
    description: t("home:services.service1.description"),
    link: t("home:services.service1.link"),
    imageOptimized: optimizedMassage1.src,
    imageFallback: massage1.src
  },
  {
    number: "02",
    name: t("home:services.service2.name"),
    description: t("home:services.service2.description"),
    link: t("home:services.service2.link"),
    imageOptimized: optimizedMassage2.src,
    imageFallback: massage2.src
  },
  {
    number: "03",
    name: t("home:services.service3.name"),
    description: t("home:services.service3.description"),
    link: t("home:services.service3.link"),
    imageOptimized: optimizedMassage3.src,
    imageFallback: massage3.src
  },
  {
    number: "04",
    name: t("home:services.service4.name"),
    description: t("home:services.service4.description"),
    link: t("home:services.service4.link"),
    imageOptimized: optimizedMassage4.src,
    imageFallback: massage4.src
  }
];
---

<!-- ============================================ -->
<!--                    Services                  -->
<!-- ============================================ -->

<section id="services-1337">
    <div class="cs-container">
        <div class="cs-content">
            <div class="cs-flex-group">
                <span class="cs-topper">{t("home:services.topper")}</span>
                <h2 class="cs-title">{t("home:services.title")}</h2>
            </div>
            <p class="cs-text">
                {t("home:services.description")}
            </p>
        </div>
        <ul class="cs-card-group">
            {services.map((service) => (
                <li class="cs-item">
                    <a href={service.link} class="cs-link">
                        <span class="cs-number">{service.number}</span>
                        <h3 class="cs-h3">{service.name}</h3>
                        <p class="cs-item-text">
                            {service.description}
                        </p>
                    </a>
                    <picture class="cs-picture">
                        <source media="(max-width: 600px)" srcset={service.imageOptimized} type="image/webp" />
                        <source media="(min-width: 601px)" srcset={service.imageOptimized} type="image/webp" />
                        <img decoding="async" src={service.imageFallback} alt={service.name} width="413" height="374" aria-hidden="true" />
                    </picture>
                    <!--On Hover Image-->
                    <img class="cs-arrow" loading="lazy" decoding="async" src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Graphics/Icon.svg" alt="arrow" width="412" height="249" aria-hidden="true" />
                </li>
            ))}
        </ul>
    </div>
</section>

<style lang="less">

/*-- -------------------------- -->
<---          Services          -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #services-1337 {
        padding: var(--sectionPadding);
        /* removing the side paddings to allow the cards to fit the whole page width */
        padding-right: 0;
        padding-left: 0;
        position: relative;

        .cs-container {
            width: 100%;
            max-width: (2500/16rem);
            margin: auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            /* 48px - 64px */
            gap: clamp(3rem, 6vw, 4rem);
        }

        .cs-content {
            /* set text align to left if content needs to be left aligned */
            text-align: center;
            width: 100%;
            max-width: (1280/16rem);
            box-sizing: border-box;
            /* 16px - 40px */
            padding: 0 clamp(1rem, 3.8vw, 2.5rem);
            display: flex;
            flex-direction: column;
            /* centers content horizontally, set to flex-start to left align */
            align-items: center;
            gap: (16/16rem);
        }

        .cs-title {
            max-width: 20ch;
        }

        .cs-card-group {
            width: 100%;
            margin: 0;
            padding: 0;
            display: grid;
            grid-template-columns: repeat(12, 1fr);
            /* 16px - 20px */
            gap: clamp(1rem, 2.5vw, 1.25rem);
        }

        .cs-item {
            text-align: left;
            list-style: none;
            width: 100%;
            /* 300px - 380px */
            height: clamp(18.75rem, 50vw, 23.75rem);
            margin: 0;
            /* prevents padding and border from affecting height and width */
            box-sizing: border-box;
            padding: 0;
            background-color: #000;
            box-shadow: 0px 12px 80px 0px rgba(26, 26, 26, 0.08);
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            align-items: flex-start;
            grid-column: span 12;
            position: relative;
            z-index: 1;

            &:hover {
                .cs-picture {
                    &::after {
                        opacity: 1;
                    }

                    img {
                        transform: scale(1.2);
                    }
                }

                .cs-h3 {
                    color: var(--primary);
                }

                .cs-number {
                    opacity: 1;
                    top: clamp(1.25rem, 2.3vw, 2rem);
                }

                .cs-arrow {
                    opacity: 0.12;
                    bottom: 50%;
                    transform: translateY(50%);
                }
            }
        }

        .cs-link {
            text-decoration: none;
            width: 100%;
            height: 100%;
            box-sizing: border-box;
            /* 20px - 32px */
            padding: clamp(1.25rem, 2.3vw, 2rem);
            /* we use flexbox here to grow the link to fit the whole item, making it clickable everywhere, no matter the size */
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            position: relative;
            z-index: 1;

            &::after {
                /* hover overlay */
                content: "";
                width: 100%;
                height: 100%;
                opacity: 0;
                position: absolute;
                top: 0;
                right: 0;
                z-index: -1;
                /* as we can't animate background gradients, we animate the change of opacity from 0 to 1 */
                transition: opacity 0.3s;
            }
        }

        .cs-number {
            /* 25px - 39px */
            font-size: clamp(1.5625rem, 2.7vw, 2.4375rem);
            font-weight: bold;
            color: var(--bodyTextColorWhite);
            opacity: 0;
            position: absolute;
            top: 0;
            transition:
                opacity 0.3s,
                top 0.3s;
        }

        .cs-h3 {
            /* 20px - 25px */
            font-size: clamp(1.25rem, 1.8vw, 1.5625rem);
            line-height: 1.2em;
            font-weight: bold;
            text-align: inherit;
            margin: 0 0 (4/16rem) 0;
            color: var(--bodyTextColorWhite);
            transition: color 0.3s;
        }

        .cs-item-text {
            /* 14px - 16px */
            font-size: clamp(0.875rem, 1.5vw, 1rem);
            line-height: 1.5em;
            margin: 0;
            padding: 0;
            color: var(--bodyTextColorWhite);
        }

        .cs-picture {
            width: 100%;
            height: 100%;
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
            overflow: hidden;

            &:before {
                /* background color overlay */
                content: "";
                width: 100%;
                height: 100%;
                background: -moz-linear-gradient(
                    top,
                    rgba(26, 26, 26, 0) 0%,
                    rgba(0, 0, 0, 0.76) 100%
                ); /* FF3.6-15 */
                background: -webkit-linear-gradient(
                    top,
                    rgba(26, 26, 26, 0) 0%,
                    rgba(0, 0, 0, 0.76) 100%
                ); /* Chrome10-25,Safari5.1-6 */
                background: linear-gradient(
                    to bottom,
                    rgba(26, 26, 26, 0) 0%,
                    rgba(0, 0, 0, 0.76) 100%
                );
                opacity: 1;
                display: block;
                position: absolute;
                top: 0;
                left: 0;
            }

            &:after {
                /* background color overlay on hover */
                content: "";
                width: 100%;
                height: 100%;
                background: -moz-linear-gradient(
                    top,
                    rgba(26, 26, 26, 0.4) 0%,
                    rgba(0, 0, 0, 0.8) 100%
                ); /* FF3.6-15 */
                background: -webkit-linear-gradient(
                    top,
                    rgba(26, 26, 26, 0.4) 0%,
                    rgba(0, 0, 0, 0.8) 100%
                ); /* Chrome10-25,Safari5.1-6 */
                background: linear-gradient(
                    to bottom,
                    rgba(26, 26, 26, 0.4) 0%,
                    rgba(0, 0, 0, 0.8) 100%
                );
                opacity: 0;
                display: block;
                position: absolute;
                bottom: 0;
                left: 0;
                transition: opacity 0.3s;
            }

            img {
                width: 100%;
                height: 100%;
                /* Makes img tag act as a background image */
                object-fit: cover;
                position: absolute;
                top: 0;
                left: 0;
                z-index: -1;
                transition: transform 0.7s;
            }
        }

        .cs-arrow {
            width: 100%;
            height: auto;
            opacity: 0;
            position: absolute;
            bottom: 0;
            left: 0;
            transition:
                bottom 0.3s,
                opacity 0.3s,
                transform 0.3s;
        }
    }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
    #services-1337 {
        padding-bottom: 0;

        .cs-content {
            text-align: left;
            flex-direction: row;
            justify-content: space-between;
            gap: (40/16rem);
        }

        .cs-item {
            grid-column: span 6;
        }

        .cs-text {
            width: 50%;
        }

        .cs-title {
            margin: 0;
        }
    }
}

/* Desktop - 900px */
@media only screen and (min-width: 56.25rem) {
    #services-1337 {
        .cs-item {
            height: (480/16rem);
            grid-column: span 3;
        }
    }
}

/* Dark Mode */
@media only screen and (min-width: 0rem) {
    body.dark-mode {
        #services-1337 {
            .cs-title,
            .cs-text {
                color: var(--bodyTextColorWhite);
            }

            .cs-text,
            .cs-item-text {
                opacity: 0.8;
            }
        }
    }
}                                   
                                                                                            
</style>