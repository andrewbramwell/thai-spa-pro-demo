---
// src/components/Services/Service4.astro
import { t } from "i18n:astro";
import { getImage } from "astro:assets";

// Import service images
import massage1 from "@assets/images/massages/massage1.jpg";
import massage2 from "@assets/images/massages/massage2.jpg";
import massage3 from "@assets/images/massages/massage3.jpg";
import massage4 from "@assets/images/massages/massage4.jpg";

// Optimize images
const optimizedMassage1 = await getImage({ src: massage1, format: 'webp', width: 413 });
const optimizedMassage2 = await getImage({ src: massage2, format: 'webp', width: 413 });
const optimizedMassage3 = await getImage({ src: massage3, format: 'webp', width: 413 });
const optimizedMassage4 = await getImage({ src: massage4, format: 'webp', width: 413 });

// Create services array for easy mapping
const services = [
  {
    name: t("home:services.service1.name"),
    description: t("home:services.service1.description"),
    link: t("home:services.service1.link"),
    imageOptimized: optimizedMassage1.src,
    imageFallback: massage1.src
  },
  {
    name: t("home:services.service2.name"),
    description: t("home:services.service2.description"),
    link: t("home:services.service2.link"),
    imageOptimized: optimizedMassage2.src,
    imageFallback: massage2.src
  },
  {
    name: t("home:services.service3.name"),
    description: t("home:services.service3.description"),
    link: t("home:services.service3.link"),
    imageOptimized: optimizedMassage3.src,
    imageFallback: massage3.src
  },
  {
    name: t("home:services.service4.name"),
    description: t("home:services.service4.description"),
    link: t("home:services.service4.link"),
    imageOptimized: optimizedMassage4.src,
    imageFallback: massage4.src
  }
];
---

<!-- ============================================ -->
<!--                  Services                    -->
<!-- ============================================ -->

<section id="services-1628">
    <div class="cs-container">
        <div class="cs-content">
            <div class="cs-flex">
                <span class="cs-topper">{t("home:services.topper")}</span>
                <h2 class="cs-title">{t("home:services.title")}</h2>
            </div>
            <p class="cs-text">
                {t("home:services.description")}
            </p>
        </div>                  
        <ul class="cs-card-group">
            {services.map((service) => (
                <li class="cs-item">
                    <a href={service.link} class="cs-link">
                        <picture class="cs-picture">
                            <!--Mobile Image-->
                            <source media="(max-width: 600px)" srcset={service.imageOptimized} type="image/webp" />
                            <!--Tablet and above Image-->
                            <source media="(min-width: 601px)" srcset={service.imageOptimized} type="image/webp" />
                            <img loading="lazy" decoding="async" src={service.imageFallback} alt={service.name} width="413" height="420" />
                        </picture>
                        <h3 class="cs-h3">{service.name}</h3>
                        <p class="cs-item-text">
                            {service.description}
                        </p>
                        <span class="cs-fake-link">
                            {t("home:services.linkText")}
                            <img class="cs-icon" src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/gold-chevron-right.svg" alt="" width="20" height="20" loading="lazy" decoding="async" aria-hidden="true" />
                        </span>
                    </a>
                </li>
            ))}
        </ul>
    </div>
</section>

<style lang="less">

/*-- -------------------------- -->
<---          Services          -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #services-1628 {
        padding: var(--sectionPadding);
        background-color: var(--sectionColor);
        
        .cs-container {
            width: 100%;
            /* changes to 1280px at tablet */
            max-width: (550/16em);
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            /* 48px - 64px */
            gap: clamp(3rem, 6vw, 4rem);
        }

        .cs-content {
            /* set text align to left if content needs to be left aligned */
            text-align: center;
            width: 100%;
            display: flex;
            flex-direction: column;
            /* centers content horizontally, set to flex-start to left align */
            align-items: center;
        }

        .cs-chevron {
            --chevronColor: var(--primary);

            width: (48/16rem);
            height: auto;
        }

        .cs-card-group {
            width: 100%;
            margin: 0;
            padding: 0;
            display: grid;
            grid-template-columns: repeat(12, 1fr);
            /* 16px - 20px */
            column-gap: clamp(1rem, 2.5vw, 1.25rem);
            /* 28px - 40px */
            row-gap: clamp(1.75rem, 2.5vw, 2.5rem);
        }
        
        .cs-item {
            list-style: none;
            width: 100%;
            display: flex;
            grid-column: span 12;
            flex-direction: column;
            align-items: flex-start;

            &:hover {
                .cs-picture {
                    img {
                        opacity: .5;
                        transform: scale(1.2);
                    }
                }
            }
        }

        .cs-link {
            text-decoration: none;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .cs-picture {
            width: 100%;
            height: (240/16rem);
            margin-bottom: (24/16rem);
            background-color: #000;
            overflow: hidden;
            display: block;
            position: relative;
            .card-radius(md);

            img {
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                object-fit: cover;
                transition: transform .6s, opacity .3s;
                
            }
        }

        .cs-h3 {
            font-size: (20/16rem);
            line-height: 1.2em;
            font-weight: 700;
            text-align: left;
            margin: 0 0 (12/16rem) 0;
            color: var(--headerColor);
        }

        .cs-item-text {
            font-size: (16/16rem);
            line-height: 1.5em;
            text-align: left;
            margin: 0 0 (24/16rem) 0;
            color: var(--bodyTextColor);
        }

        .cs-fake-link {
            font-size: (16/16rem);
            line-height: 1.2em;
            font-weight: 700;
            margin: 0;
            margin-top: auto;
            color: var(--primary);
            display: inline-flex;
            justify-content: flex-start;
            align-items: center;
            gap: (8/16rem);

            &:hover {
                .cs-icon {
                    transform: translateX(.5rem);
                }
            }
        }

        .cs-icon {
            width: (20/16rem);
            height: auto;
            display: block;
            transition: transform .3s;
        }
    }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
    #services-1628 {
        .cs-container {
            max-width: (1280/16rem);
        }

        .cs-item {
            grid-column: span 6;
        }

        .cs-picture {
            /* 240px - 420px */
            height: clamp(15rem, 33vw, 26.25rem);
        }
    }
}

/* Large Desktop - 1300px */
@media only screen and (min-width: 81.25rem) {
    #services-1628 {
        .cs-item {
            grid-column: span 3;
        }
    }
}

/* Dark Mode */
@media only screen and (min-width: 0rem) {
    body.dark-mode {
        #services-1628 {
            background-color: rgba(0, 0, 0, .2);

            .cs-title, .cs-text, .cs-h3, .cs-item-text {
                color: var(--bodyTextColorWhite);
            }

            .cs-text, .cs-item-text {
                opacity: .8;
            }
        }
    }
}
                                           
                                                                                            
</style>