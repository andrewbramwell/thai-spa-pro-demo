---
import navData from "@data/navData";
import { getLocalePath, t } from "i18n:astro";
import Settings from "./TemplateComponents/Settings.astro";
import client from "@data/client.json";
---

<!-- ============================================ -->
<!--                 Navigation                   -->
<!-- ============================================ -->

<header id="cs-navigation" data-header="3">
    <div class="cs-top-bar">
        <div class="cs-top-container">
            <!--Logo for top bar (mobile hidden)-->
            <a href={getLocalePath("/")} class="cs-logo cs-top-logo" aria-label="back to home">
                <!--White Logo-->
                <img class="cs-default" src="/assets/svgs/logo-white.svg" alt="logo" width="197" height="43" aria-hidden="true" decoding="async">
                <!--Dark Logo-->
                <img class="cs-onscroll" src="/assets/svgs/logo-black.svg" alt="logo" width="197" height="43" aria-hidden="true" decoding="async">
            </a>
            <div class="cs-top-contact">
                <a href={`tel:${client.phoneForTel}`} class="cs-top-link">
                    <svg class="cs-link-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z" fill="currentColor"/>
                    </svg>
                    {client.phoneFormatted}
                </a>
            </div>
            <a href={getLocalePath("/contact")} class="cs-button-solid cs-nav-button">{t("requestQuote")}</a>
        </div>
    </div>
    <div class="cs-container">
        <!--Nav Logo (mobile visible)-->
        <a href={getLocalePath("/")} class="cs-logo cs-bottom-logo" aria-label="back to home">
            <!--White Logo-->
            <img class="cs-default" src="/assets/svgs/logo-white.svg" alt="logo" width="197" height="43" aria-hidden="true" decoding="async">
            <!--Dark Logo-->
            <img class="cs-onscroll" src="/assets/svgs/logo-black.svg" alt="logo" width="197" height="43" aria-hidden="true" decoding="async">
        </a>
        <!--Navigation List-->
        <nav class="cs-nav" role="navigation">
            <!--Mobile Nav Toggle-->
            <button
                class="cs-toggle"
                id="mobile-menu-toggle"
                aria-expanded="false"
                aria-controls="cs-expanded-ul"
                aria-label="mobile menu toggle"
            >
                <div class="cs-box" aria-hidden="true">
                    <span class="cs-line cs-line1" aria-hidden="true"></span>
                    <span class="cs-line cs-line2" aria-hidden="true"></span>
                    <span class="cs-line cs-line3" aria-hidden="true"></span>
                </div>
            </button>
            <!-- Wrapper for mobile menu -->
            <div class="cs-ul-wrapper">
                <ul id="cs-expanded-ul" class="cs-ul" aria-expanded="false">
                    {navData.map((entry: any) => (
                        <li
                            class:list={[
                                "cs-li",
                                { "cs-dropdown": entry.children?.length > 0 },
                            ]}
                        >
                            {entry.children?.length > 0 ? (
                                // If entry has children, create a dropdown
                                <span class="cs-li-link">
                                    {t(entry.key)}
                                    <svg class="cs-drop-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z" fill="currentColor"/>
                                    </svg>
                                </span>
                            ) : (
                                // If no children, create a regular link
                                <a
                                    href={getLocalePath(entry.url)}
                                    class:list={[
                                        "cs-li-link",
                                        {
                                            "cs-active":
                                                Astro.url.pathname === getLocalePath(entry.url),
                                        },
                                    ]}
                                    aria-current={
                                        Astro.url.pathname === getLocalePath(entry.url)
                                            ? "page"
                                            : undefined
                                    }
                                >
                                    {t(entry.key)}
                                </a>
                            )}

                            {entry.children?.length > 0 && (
                                // Dropdown menu
                                <ul class="cs-drop-ul">
                                    {entry.children.map((child: any) => (
                                        <li class="cs-drop-li">
                                            <a
                                                href={getLocalePath(child.url)}
                                                class="cs-li-link cs-drop-link"
                                                aria-current={
                                                    Astro.url.pathname === getLocalePath(child.url)
                                                        ? "page"
                                                        : undefined
                                                }
                                            >
                                                {t(child.key)}
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            )}
                        </li>
                    ))}
                </ul>
                <!-- Settings below nav in mobile only -->
                <div class="cs-settings cs-mobile-settings">
                    <Settings />
                </div>
            </div>
        </nav>
        <!-- Settings next to nav links on desktop -->
        <div class="cs-settings">
            <Settings />
        </div>
    </div>
</header>


<script src="@assets/js/nav3.js"></script>

<style lang="less">
